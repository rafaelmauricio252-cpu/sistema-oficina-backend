{
  "name": "oficina-backend",
  "version": "2.0.0",
  "description": "Sistema completo de gestão de oficina mecânica",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "migrate": "node-pg-migrate up",
    "start": "node server.js",
    "dev": "npm run migrate && nodemon server.js",
    "test": "jest --runInBand",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "dotenv node-pg-migrate up",
    "migrate:down": "dotenv node-pg-migrate down",
    "migrate:reset": "dotenv node-pg-migrate down --all && dotenv node-pg-migrate up"
  },
  "keywords": [
    "oficina",
    "mecanica",
    "ordem de servico",
    "gestao"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.9.1",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "jest": "^30.2.0",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
